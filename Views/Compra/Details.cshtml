@model Proyecto.Models.compra

<div>
    <h4>Compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fecha:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            Total:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.total)
        </dd>

        <dt>
            Nombre del Usuario:
        </dt>

        <dd>
            @Proyecto.Controllers.CompraController.NombreUsuario(Model.id_usuario)
        </dd>

        <dt>
            Nombre del Cliente:
        </dt>

        <dd>
            @Proyecto.Controllers.CompraController.NombreCliente(Model.id_cliente)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver", "Index")
</p>
