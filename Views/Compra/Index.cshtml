@model IEnumerable<Proyecto.Models.compra>

@{
    ViewBag.Title = "Index";
}

<h2>Compra</h2>

<p>
    @Html.ActionLink("Crear Compra", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Total
        </th>
        <th>
            Nombre del Usuario
        </th>
        <th>
            Nombre del Cliente
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total)
        </td>
        <td>
            @Proyecto.Controllers.CompraController.NombreUsuario(item.id_usuario)
        </td>
        <td>
            @Proyecto.Controllers.CompraController.NombreCliente(item.id_cliente)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
