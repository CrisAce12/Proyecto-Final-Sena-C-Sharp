@model Proyecto.Models.producto_compra

@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>

<div>
    <h4>Producto - Compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id Compra:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_compra)
        </dd>

        <dt>
            Nombre del Producto:
        </dt>

        <dd>
            @Proyecto.Controllers.Producto_CompraController.NombreProducto(Model.id_producto)
        </dd>

        <dt>
            Cantidad:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver", "Index")
</p>
