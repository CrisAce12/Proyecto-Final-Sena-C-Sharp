@model IEnumerable<Proyecto.Models.producto_compra>

@{
    ViewBag.Title = "Index";
}

<h2>Producto - Compra</h2>

<p>
    @Html.ActionLink("Crear Producto - Compra", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Id Compra
        </th>
        <th>
            Nombre Compra
        </th>
        <th>
            Cantidad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_compra)
        </td>
        <td>
            @Proyecto.Controllers.Producto_CompraController.NombreProducto(item.id_producto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
